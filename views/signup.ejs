<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Alpha Drive</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="min-h-screen bg-white text-slate-900 flex flex-col">
  <!-- Header -->
  <header class="p-6 max-w-6xl  w-full">
    <a href="/" class="flex items-center gap-3">
      <span
        class="inline-flex h-8 w-8 items-center justify-center rounded-md bg-[#6A4BFF] text-white font-semibold">A</span>
      <span class="text-lg font-semibold">Alpha Drive</span>
    </a>
  </header>

  <!-- Main -->
  <main class="flex-1 grid place-items-center px-6">
    <div class="w-full max-w-6xl grid grid-cols-1 md:grid-cols-2 gap-16 items-start">
      <!-- Left copy -->
      <div>
        <h1 class="text-5xl md:text-7xl font-medium leading-tight">
          Create a <br> new account
        </h1>
        <p class="text-gray-600 font-light mt-8">
          Alpha Drive gives you secure access to all your files.
          Collaborate with friends, family, and coworkers from any device.
        </p>
      </div>

      <!-- Right form -->
      <div>
        <form action="#" class="space-y-5">
          <!-- Full name -->
          <div>
            <label for="fullname" class="block text-sm font-medium">Full name <span
                class="text-red-500">*</span></label>
            <input id="fullname" name="fullname" type="text" placeholder="Full name" autofocus
              class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#6A4BFF]">
          </div>
          <!-- User Name-->
          <div>
            <label for="username" class="block text-sm font-medium">Username <span class="text-red-500">*</span></label>
            <input id="username" name="username" type="text" placeholder="Username"
              class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#6A4BFF]">
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium">Email <span class="text-red-500">*</span></label>
            <input id="email" name="email" type="email" placeholder="Email" autocomplete="email"
              class="mt-2 w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#6A4BFF]">
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium">Password <span class="text-red-500">*</span></label>
            <div class="pw-field relative mt-2">
              <input id="password" name="password" type="password" placeholder="Password" autocomplete="new-password"
                class="w-full pr-11 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#6A4BFF]">
              <button type="button"
                class="absolute inset-y-0 right-3 my-auto inline-flex h-6 w-6 items-center justify-center text-slate-400 hover:text-slate-600"
                aria-label="Show password" aria-pressed="false" data-role="toggle">
                <!-- eye -->
                <svg viewBox="0 0 24 24" class="h-6 w-6" data-eye>
                  <path fill="currentColor"
                    d="M12 5c-5.5 0-9.7 4.5-10.7 6 .9 1.5 5.2 6 10.7 6s9.8-4.5 10.7-6C21.8 9.5 17.5 5 12 5Zm0 10a4 4 0 1 1 0-8 4 4 0 0 1 0 8Zm0-2a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" />
                </svg>
                <!-- eye-off -->
                <svg viewBox="0 0 24 24" class="hidden h-6 w-6" data-eye-off>
                  <path fill="currentColor"
                    d="M2.3 1.6 1 2.9l4 4C2.8 8 1.5 9.7 1.3 10c.9 1.5 5.2 6 10.7 6 1.8 0 3.5-.4 5-.9l3 3 1.3-1.3L2.3 1.6zM12 7a3 3 0 0 1 3 3c0 .4-.1.8-.2 1.1L13 9.3V9a1 1 0 0 0-1-1h-.3L10.9 7.2c.3-.1.7-.2 1.1-.2Zm9.4 2.1C20.5 7.6 16.2 4 12 4c-1.1 0-2.1.2-3.1.5l1.6 1.6c.5-.1 1-.1 1.5-.1 5.1 0 9 4.2 9.9 5-.3.4-1.1 1.2-2.2 2.1l1.2 1.2c1.4-1.2 2.4-2.5 2.9-3.2-.2-.3-1.5-2-3.4-3.9Z" />
                </svg>
              </button>
            </div>
          </div>

          <!-- Confirm password -->
          <div>
            <label for="passwordConfirm" class="block text-sm font-medium">Password confirmation <span
                class="text-red-500">*</span></label>
            <div class="pw-field relative mt-2">
              <input id="passwordConfirm" name="passwordConfirm" type="password" placeholder="Password confirmation"
                autocomplete="new-password"
                class="w-full pr-11 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#6A4BFF]">
              <button type="button"
                class="absolute inset-y-0 right-3 my-auto inline-flex h-6 w-6 items-center justify-center text-slate-400 hover:text-slate-600"
                aria-label="Show password" aria-pressed="false" data-role="toggle">
                <svg viewBox="0 0 24 24" class="h-6 w-6" data-eye>
                  <path fill="currentColor"
                    d="M12 5c-5.5 0-9.7 4.5-10.7 6 .9 1.5 5.2 6 10.7 6s9.8-4.5 10.7-6C21.8 9.5 17.5 5 12 5Zm0 10a4 4 0 1 1 0-8 4 4 0 0 1 0 8Zm0-2a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" />
                </svg>
                <svg viewBox="0 0 24 24" class="hidden h-6 w-6" data-eye-off>
                  <path fill="currentColor"
                    d="M2.3 1.6 1 2.9l4 4C2.8 8 1.5 9.7 1.3 10c.9 1.5 5.2 6 10.7 6 1.8 0 3.5-.4 5-.9l3 3 1.3-1.3L2.3 1.6zM12 7a3 3 0 0 1 3 3c0 .4-.1.8-.2 1.1L13 9.3V9a1 1 0 0 0-1-1h-.3L10.9 7.2c.3-.1.7-.2 1.1-.2Zm9.4 2.1C20.5 7.6 16.2 4 12 4c-1.1 0-2.1.2-3.1.5l1.6 1.6c.5-.1 1-.1 1.5-.1 5.1 0 9 4.2 9.9 5-.3.4-1.1 1.2-2.2 2.1l1.2 1.2c1.4-1.2 2.4-2.5 2.9-3.2-.2-.3-1.5-2-3.4-3.9Z" />
                </svg>
              </button>
            </div>
          </div>

          <!-- Terms -->
          <label class="flex items-start gap-3 text-sm">
            <input type="checkbox" class="mt-1 h-4 w-4 rounded border-gray-300">
            <span>I have read and agree to the Terms & Conditions</span>
          </label>

          <button class="w-full px-6 py-2.5 bg-[#6A4BFF] text-white rounded-md font-medium hover:opacity-90">
            Sign Up
          </button>
        </form>
      </div>
    </div>
  </main>

  <!-- Password toggle script (reusable for each .pw-field) -->
  <script>
    document.querySelectorAll('.pw-field').forEach((field) => {
      const input = field.querySelector('input');
      const btn = field.querySelector('[data-role="toggle"]');
      const eye = field.querySelector('[data-eye]');
      const eyeOff = field.querySelector('[data-eye-off]');

      btn.addEventListener('click', () => {
        const showing = input.type === 'text';
        input.type = showing ? 'password' : 'text';
        btn.setAttribute('aria-pressed', String(!showing));
        btn.setAttribute('aria-label', showing ? 'Show password' : 'Hide password');
        eye.classList.toggle('hidden', !showing);
        eyeOff.classList.toggle('hidden', showing);
      });
    });
  </script>
</body>

</html>