<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alpha Drive</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="min-h-screen bg-[#FCFBFF] text-slate-900 flex flex-col">
    <!-- Header -->
    <header class="p-6 m-w-6xl">
        <a href="/" class="flex items-center gap-3">
            <span
                class="inline-flex h-8 w-8 items-center justify-center rounded-md bg-[#6A4BFF] text-white font-semibold">A</span>
            <span class="text-lg font-semibold">Alpha Drive</span>
        </a>
    </header>


    <main class="flex-1 grid place-items-center px-4 py-10">
        <!-- Actual content grid -->
        <div class="w-full  flex gap-20 justify-center">
            <!-- Left: illustration -->
            <div class="flex justify-center md:justify-start">
                <%- include('./partials/loginsvg') %>
            </div>

            <!-- Right: form -->
            <div class="w-md">
                <h1 class="text-2xl font-semibold">Sign in to your account</h1>
                <p class="mt-1 text-slate-500">
                    Donâ€™t have an account?
                    <a href="/signup" class="text-[#6A4BFF] font-medium">Sign up</a>
                </p>

                <div>
                    <form class="mt-8 space-y-5">
                        <!-- Email -->
                        <div>
                            <label for="username" class="block text-sm font-medium text-slate-700">Username</label>
                            <input id="username" name="username" type="text" autocomplete="email" required autofocus
                                placeholder="Username" value=""
                                class="mt-2 w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-[#6A4BFF]" />
                        </div>

                        <!-- Password + eye -->
                        <div>
                            <label for="password" class="block text-sm font-medium text-slate-700">Password</label>
                            <div class="relative mt-2">
                                <input id="password" name="password" type="password" autocomplete="current-password"
                                    required placeholder="Password" value=""
                                    class="w-full rounded-xl border border-slate-200 bg-white px-4 py-2.5 pr-11 text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-[#6A4BFF]" />

                                <!-- Toggle button -->
                                <button type="button" id="togglePassword"
                                    class="absolute inset-y-0 right-3 my-auto inline-flex h-6 w-6 items-center justify-center text-slate-400 hover:text-slate-600"
                                    aria-label="Show password" aria-pressed="false">
                                    <!-- eye -->
                                    <svg id="icon-eye" viewBox="0 0 24 24" class="h-6 w-6">
                                        <path fill="currentColor"
                                            d="M12 5c-5.5 0-9.7 4.5-10.7 6 .9 1.5 5.2 6 10.7 6s9.8-4.5 10.7-6C21.8 9.5 17.5 5 12 5Zm0 10a4 4 0 1 1 0-8 4 4 0 0 1 0 8Zm0-2a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" />
                                    </svg>
                                    <!-- eye-off -->
                                    <svg id="icon-eye-off" viewBox="0 0 24 24" class="hidden h-6 w-6">
                                        <path fill="currentColor"
                                            d="M2.3 1.6 1 2.9l4 4C2.8 8 1.5 9.7 1.3 10c.9 1.5 5.2 6 10.7 6 1.8 0 3.5-.4 5-.9l3 3 1.3-1.3L2.3 1.6zM12 7a3 3 0 0 1 3 3c0 .4-.1.8-.2 1.1L13 9.3V9a1 1 0 0 0-1-1h-.3L10.9 7.2c.3-.1.7-.2 1.1-.2Zm9.4 2.1C20.5 7.6 16.2 4 12 4c-1.1 0-2.1.2-3.1.5l1.6 1.6c.5-.1 1-.1 1.5-.1 5.1 0 9 4.2 9.9 5-.3.4-1.1 1.2-2.2 2.1l1.2 1.2c1.4-1.2 2.4-2.5 2.9-3.2-.2-.3-1.5-2-3.4-3.9Z" />
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <!-- Remember + forgot -->
                        <div class="flex items-center justify-between text-sm">
                            <label class="inline-flex items-center gap-2 text-slate-600">
                                <input type="checkbox"
                                    class="h-4 w-4 rounded border-slate-300 text-[#6A4BFF] focus:ring-[#6A4BFF]"
                                    id="admin" />
                                Use Admin Credentials
                            </label>
                            <a href="#" class="text-[#6A4BFF] hover:underline">Forgot password?</a>
                        </div>

                        <!-- Buttons -->
                        <button type="submit"
                            class="w-full rounded-xl bg-[#6A4BFF] py-2.5 text-white font-medium hover:opacity-90">
                            Sign in
                        </button>

                    </form>
                </div>
            </div>



        </div>
        </div>
    </main>

    <script>
        const password = document.getElementById('password');
        const toggle = document.getElementById('togglePassword');
        const eye = document.getElementById('icon-eye');
        const eyeOff = document.getElementById('icon-eye-off');
        const username = document.getElementById('username');
        const adminRequest = document.getElementById('admin')

        toggle.addEventListener('click', () => {
            const showing = password.type === 'text';
            password.type = showing ? 'password' : 'text';
            toggle.setAttribute('aria-pressed', String(!showing));
            toggle.setAttribute('aria-label', showing ? 'Show password' : 'Hide password');
            eye.classList.toggle('hidden', !showing);
            eyeOff.classList.toggle('hidden', showing);
        });

        adminRequest.addEventListener('click', function (event) {
            if (event.target.checked) {
                password.value = 'admin1admin1';
                username.value = 'admin';
            } else {
                password.value = '';
                username.value = '';
            }
        });
    </script>
</body>

</html>